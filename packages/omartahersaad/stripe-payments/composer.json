{
    "name": "omartahersaad/stripe-payments",
    "description": "Laravel Package for Integrating with Stripe Gateway for making payments",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Omar Taher Saad",
            "email": "omartahersaad@outlook.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "laravel/framework": "^10.0",
        "symfony/http-kernel": "^6.0",
        "stripe/stripe-php": "^12.1",
        "nesbot/carbon": "^2.69"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3"
    },
    "autoload": {
        "psr-4": {
            "OmarTaherSaad\\StripePayments\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OmarTaherSaad\\StripePayments\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "OmarTaherSaad\\StripePayments\\StripePaymentServiceProvider"
            ]
        }
    }
}
